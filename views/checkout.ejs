<%- include('partials/header'); -%>
<div class="container">
  <h1><%=found.name%></h1>
  <span style="padding-left: 43%; font-weight: 500; color: red;">
    <%=found.typeOfGoods%></span
  >
  <form style="padding-top: 50px;">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Name</label>
        <input
          type="text"
          class="form-control"
          id="inputEmail4"
          placeholder="Full Name"
        />
      </div>
      <div class="form-group col-md-6">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Email" />
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress">Phone Number</label>
      <input type="text" class="form-control" placeholder="Your Phone Number" />
    </div>
    <%var price = found.price%>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="inputState">Duration / month</label>
        <select id="inputState" class="form-control">
          <option selected>Choose...</option>
          <option>1 month - <%= parseInt(price) %> L.E</option>
          <option>2 month - <%= 2 * parseInt(price) %> L.E</option>
          <option>3 month - <%= 3 * parseInt(price) %> L.E</option>
        </select>
      </div>
      <input
        type="submit"
        class="form-control btn btn-primary"
        placeholder="Your Phone Number"
      />
    </div>
  </form>
</div>
<% -include('partials/footer'); -%>
